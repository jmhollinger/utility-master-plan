  body
    nav.navbar.navbar-default.navbar-static-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Utility Master Plans
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li
                a(href='/') Home
              li
                a(href='/map') Map
              li
                a(href='/list') Project List
            ul.nav.navbar-nav.navbar-right
              li
                a(href='/logout') Log Out
    .container
      .row
        .col-sm-12
          .btn-group
            a.btn.btn-default(href='/api/projectlist') Export CSV
            a.btn.btn-default(href='/api/projects') Export GeoJSON
          table.table
            thead
              tr
                th='Date'
                th='Utility'
                th='Name'
                th='Description'
                th='Street Cut'
                th='Street'
              tbody
                for item in data
                  tr
                    td= item.DateCreated
                    td= item.Utility
                    td= item.Name
                    td= item.Description
                    td= item.StreetCut
                    td= item.Street
    // Placed at the end of the document so the pages load faster
